{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "preserve",
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"paths": {
			"src": ["src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules/*"]
}
